<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="130dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tv_codename"
        android:text="Codename"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tv_version"
        android:layout_alignStart="@+id/tv_version"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/tv_version"
        android:text="Version"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_codename"
        android:layout_alignLeft="@+id/tv_date"
        android:layout_alignStart="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_api"
        android:text="API"
        android:gravity="center_vertical"
        android:layout_alignBaseline="@+id/tv_version"
        android:layout_toRightOf="@+id/tv_version"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_date"
        android:text="Release Date"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_version"
        android:layout_centerHorizontal="true" />

</RelativeLayout>